<button class="button button--outline create-button" @onclick="@ModalShow">@ButtonName</button>
@if (_showModal)
{
    <div class="modal fade show" id="myModal" style="display:block; background-color: transparent;" aria-modal="true" role="dialog">
        <div class="modal-dialog" style="background-color:black; color:whitesmoke; display: flex;margin: 15%;">
            <div class="modal-content" >

                @ChildContent

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button class="button button--outline create-button" type="button" @onclick="@ModalCancel">Cancel</button>
                </div>

            </div>
        </div>
    </div>
}
@code
{
    [Parameter]
    public string ButtonClass { get; set; }
    
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
    
    [Parameter]
    public string ButtonName { get; set; }
    
    private bool _showModal = false;
    private void ModalShow() => _showModal = true;
    public void ModalCancel() => _showModal = false;
}