<button class="button button--outline create-button" @onclick="@ModalShow">@ButtonName</button>
@if (_showModal)
{
    <div class="modal fade show" id="myModal" style="display: block; background-color: transparent" aria-modal="true" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content" >
                @ChildContent
            </div>
        </div>
    </div>
}
@code
{
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
    
    [Parameter]
    public string ButtonName { get; set; }

    private bool _showModal = false;
    private void ModalShow()=> _showModal = true;
    public void ModalCancel() => _showModal = false;
}