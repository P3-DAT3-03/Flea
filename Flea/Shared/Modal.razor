<button class="@ButtonCSS" @onclick="@Open">@ButtonName</button>
@if (_showModal)
{
    <div class="modal fade show modal-display" id="myModal" aria-modal="true" role="dialog">
    <div class="modal-dialog">
            <div class="modal-content">
                @ChildContent
            </div>
        </div>
    </div>
}
@code
{
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
    
    [Parameter]
    public string ButtonName { get; set; } = string.Empty;
    
    [Parameter]
    public string ButtonCSS { get; set; } = string.Empty;

    private bool _showModal = false;
    private void Open() => _showModal = true;
    public void Close() => _showModal = false;
}