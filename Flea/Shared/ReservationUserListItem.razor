<div class="reservation-li">
    <div class="res-txt">@Name</div>
    <div class="res-txt">@Stande</div>
    <div class="res-txt">@(PaymentStatus ? "Betalt" : "Ej betalt")</div>
    <button class="button res-del-button button--outline" @onclick="Delete">Slet</button>
    <button class="button res-edit-button" @onclick="Edit">Rediger</button>
</div>

@code {
    [Parameter]
    public string Name { get; set; }

    [Parameter]
    public int Stande { get; set; }
    
    [Parameter]
    public bool PaymentStatus { get; set; }
    
    [Parameter]
    public EventCallback<string> OnDelete { get; set; }
    
    [Parameter]
    public EventCallback<string>OnEdit { get; set; }

    public async Task Delete()
    {
        await OnDelete.InvokeAsync(Name);
    }

    public async Task Edit()
    {
        await OnEdit.InvokeAsync(Name);
    }
}