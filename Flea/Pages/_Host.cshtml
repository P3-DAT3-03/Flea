@page "/"
@namespace Flea.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, height=device-height, initial-scale=1, maximum-scale=1">
    <title>Flea</title>
    <base href="~/"/>
    <link href="OnsenUI/onsenui.min.css" rel="stylesheet"/>
    <link href="OnsenUI/onsen-css-components.min.css" rel="stylesheet"/>
    <link href="OnsenUI/theme.css" rel="stylesheet">
    <link href="css/app.css" rel="stylesheet"/>
    <link href="css/core.css" rel="stylesheet">
    <link href="Flea.styles.css" rel="stylesheet"/>
    <link rel="manifest" href="/manifest.json">
    @*icon only shows up if it is not from a local ip i guess*@
    <link rel="apple-touch-icon" href="https://i.imgur.com/O2NYW1i.png">
    <link rel="apple-touch-startup-image" href="https://i.imgur.com/vPJtZ48.jpeg"/>
    <script>
        if ('serviceWorker' in navigator) {
          navigator.serviceWorker.register('/service-worker.js').then(function(registration) {
            console.log('ServiceWorker registration successful!');
          }).catch(function(err) {
            console.log('ServiceWorker registration failed: ', err);
          });
        }
    </script>
</head>
<body>
<component type="typeof(App)" render-mode="ServerPrerendered"/>
<div id="blazor-error-ui">
    <environment include="Staging,Production">
        An error has occurred. This application may no longer respond until reloaded.
    </environment>
    <environment include="Development">
        An unhandled exception has occurred. See browser dev tools for details.
    </environment>
    <a href="" class="reload">Reload</a>
    <a class="dismiss">ðŸ—™</a>
</div>

<script src="OnsenUI/onsenui.min.js"></script>
<script src="_framework/blazor.server.js"></script>

</body>
</html>